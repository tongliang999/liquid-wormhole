{{#each targets as |target index|}}
  {{#liquid-target
    target=target
    name=target.name
    items=target.items
    class=target.class
    index=index
    contextClass=target.contextClass

    as |target|}}
    {{#liquid-versions value=target.currentItem notify=target renderWhenFalse=true as |currentItem|}}
      {{liquid-append nodes=currentItem.nodes}}
    {{/liquid-versions}}
  {{/liquid-target}}
{{/each}}
